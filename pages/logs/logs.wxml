<view class="orders">
  <scroll-view scroll-y="true">
    <view class="ordersScan" wx:for="{{orders}}" wx:for-item="item"  wx:key="{{userId}}">
    <van-card  
      price="{{item.orderPrice}}" 
      desc="胜利要求:{{item.orderIsWarn}}    保证金:￥{{item.orderWarn}}" 
      title="{{orderGameName}}抢单信息" 
      thumb="{{img}}" 
      num="{{item.orderTime}}" 
      >
  <view slot="tags">
    <van-tag round type="success">{{item.orderGameBigRange}}</van-tag>
    <van-tag round type="success">{{item.orderGameSmallRange}}</van-tag>
    <van-tag round type="success">{{item.orderGameType}}</van-tag>
  </view>
  <view slot="footer">
    <view wx:if="{{item.status == 'exist'}}" >
      <van-button type="primary"round size="small"  wx:for-index="index" data-index="{{index}}" bind:click="get">立即抢单</van-button>
    </view>
    <view wx:elif="{{item.status == 'getting'}}">
      <van-button type="info"round size="small" >抢单中</van-button>
    </view>  
    <view wx:elif="{{item.status == 'end'}}">
      <van-button type="primary"round size="small" color="#708090">已结束</van-button>
    </view>  
  </view>
