    <van-search
      value="{{value}}"
      input-align="center"
      placeholder="请输入关键词"
    />
  </view>
  <view class="zhanbo">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{zhanboImg}}" wx:key="key">
      <swiper-item>
        <image wx:if="{{item}}"  src="{{item}}" bindtap="test"/>
      </swiper-item>
    </block>
  </swiper>
</view>

