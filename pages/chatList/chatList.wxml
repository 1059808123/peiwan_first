<!--pages/chatList/chatList.wxml-->

<view class="list-container">
  <view 
    wx:for="{{ friends }}" 
    wx:key="{{userId}}"
    class="list-row-wrapper" 
    hover-class="list-row-hover" 
    hover-stay-time="50"
    data-user="{{ item }}" 
    data-index="{{index}}"
    bindtap="gotoChat">
    <view class="list-row">
      <view class="list-icon">
        <view class="list-photo">
          <image src="{{ item.Photo }}" style="width: 50px; height: 50px;"></image>
        </view>
        <view wx:if="{{ item.tag > 0 }}" class="message-dot"></view>
      </view>
      <view class="list-content">
        <view class="list-content-layout">
          <view class="list-content-name">
            <text class="list-content-title">{{ item.NickName }}</text>
            <text class="list-content-time">{{ item.chatMessage[0].time }}</text>
          </view>
          <view class="list-content-brief">
            <text>[{{ item.tag }}条]{{ item.chatMessage[0].contentText }}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
