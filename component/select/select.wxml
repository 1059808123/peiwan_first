<view class='com-selectBox'>
    <view class='com-sContent' bindtap='selectToggle'>
        <view class='com-sTxt'>{{nowText==''?propArray[0].text:nowText}}</view>
        <image src='../../pages/Images/tag_top.png'  class='com-sImg'  animation="{{animationData}}"></image>
    </view>
    <view class='com-sList' wx:if="{{selectShow}}">
        <view wx:for="{{propArray}}" data-index="{{index}}" wx:key='id' class='com-sItem' bindtap='setText'>{{item.text}}</view>
    </view>
</view>